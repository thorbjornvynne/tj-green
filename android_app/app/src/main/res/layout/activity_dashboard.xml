
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="24dp">

    <LinearLayout android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/logoHeader"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/ic_launcher"
            android:contentDescription="App Logo"
            android:layout_marginBottom="16dp" />

        <TextView
            android:text="tj-green Dashboard"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/newsButton"
            android:text="News and Predictions"
            android:drawableLeft="@android:drawable/ic_menu_info_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/accountsButton"
            android:text="Manage X Accounts"
            android:drawableLeft="@android:drawable/ic_menu_myplaces"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/scheduleButton"
            android:text="Scraping Schedule"
            android:drawableLeft="@android:drawable/ic_menu_recent_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/stocksButton"
            android:text="Monitored Stocks"
            android:drawableLeft="@android:drawable/ic_menu_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/themesButton"
            android:text="Themes and Appearance"
            android:drawableLeft="@android:drawable/ic_menu_gallery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp" />

        <Switch
            android:id="@+id/gptToggle"
            android:text="Use ChatGPT for Predictions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"/>
    </LinearLayout>
</ScrollView>
